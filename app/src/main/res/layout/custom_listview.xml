<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
<ImageView
    android:layout_centerVertical="true"
    android:id="@+id/circle_image"
    android:padding="4dp"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/logo_"
    />
    <RelativeLayout
        android:layout_toRightOf="@+id/circle_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">
    <TextView
        android:textSize="16dp"
       android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:id="@+id/titel"
        android:text="my Run 1"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="15,98 km"
            android:id="@+id/dist"
            android:layout_toRightOf="@+id/titel"
            android:layout_centerVertical="true"
             />
        <TextView
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="00:89"
            android:id="@+id/time"
            android:layout_toRightOf="@+id/dist"
            android:layout_centerVertical="true"
            />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:src="@mipmap/ic_arrow_forward_black_24dp"
    android:padding="8dp"/>
    </RelativeLayout>


</RelativeLayout>